<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AndroidTheme" parent="@android:style/Theme.Material.Light.DarkActionBar" />
    <style name="AndroidDarkTheme" parent="@android:style/Theme.Material" />
    
    <!--
        Base application theme for API 21+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 21+ devices.
    -->
    <style name="AppBaseTheme" parent="AndroidTheme">
        <item name="listContentHeader">?android:attr/listSeparatorTextViewStyle</item>
        <item name="listHeaderTextColor">@color/theme_accent</item>
        <item name="listPreferredItemPaddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="listPreferredItemPaddingRight">?android:attr/listPreferredItemPaddingRight</item>
        
        <!-- Used by the ActionBar -->
        <item name="android:colorPrimary">@color/theme_primary</item>
        <!-- Used by the StatusBar -->
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <style name="AppBaseDarkTheme" parent="AndroidDarkTheme">
        <item name="listContentHeader">?android:attr/listSeparatorTextViewStyle</item>
        <item name="listHeaderTextColor">@color/theme_accent</item>
        <item name="listPreferredItemPaddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="listPreferredItemPaddingRight">?android:attr/listPreferredItemPaddingRight</item>
        
        <!-- Used by the ActionBar -->
        <item name="android:colorPrimary">@color/theme_primary</item>
        <!-- Used by the StatusBar -->
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <style name="ListItemTitle" parent="@android:style/TextAppearance.Medium" >
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="ListItemSummary" parent="@android:style/TextAppearance.Small" >
        <item name="android:textColor">@color/text_color_secondary_text_material_light</item>
    </style>
</resources>
